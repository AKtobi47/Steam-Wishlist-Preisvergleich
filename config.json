{
  "version": "3.0.0",
  "last_updated": "2025-01-20T10:00:00Z",
  "description": "Steam Price Tracker - Vollständige Konfiguration",
  "database": {
    "path": "steam_price_tracker.db",
    "backup_enabled": true,
    "backup_directory": "backups",
    "cleanup_days": 90,
    "auto_vacuum": true,
    "wal_mode": true,
    "synchronous": "NORMAL",
    "cache_size": 10000,
    "temp_store": "memory"
  },
  "tracking": {
    "default_interval_hours": 6,
    "max_apps_per_update": 100,
    "enable_automatic_tracking": false,
    "batch_size": 50,
    "concurrent_updates": 5,
    "retry_attempts": 3,
    "retry_delay": 5,
    "timeout_seconds": 30,
    "name_update_interval_minutes": 30,
    "price_staleness_hours": 24,
    "update_priorities": {
      "high_priority_hours": 2,
      "normal_priority_hours": 6,
      "low_priority_hours": 12
    }
  },
  "cheapshark": {
    "rate_limit_seconds": 1.5,
    "timeout_seconds": 15,
    "store_ids": "1,3,7,11,15,27",
    "stores": {
      "1": {
        "name": "Steam",
        "enabled": true,
        "priority": 1
      },
      "3": {
        "name": "GreenManGaming",
        "enabled": true,
        "priority": 2
      },
      "7": {
        "name": "GOG",
        "enabled": true,
        "priority": 3
      },
      "11": {
        "name": "HumbleStore",
        "enabled": true,
        "priority": 4
      },
      "15": {
        "name": "Fanatical",
        "enabled": true,
        "priority": 5
      },
      "27": {
        "name": "GamesPlanet",
        "enabled": true,
        "priority": 6
      }
    },
    "cache_enabled": true,
    "cache_ttl_seconds": 3600,
    "max_retries": 3,
    "backoff_factor": 2.0
  },
  "steam_api": {
    "rate_limit_seconds": 1.0,
    "timeout_seconds": 10,
    "max_retries": 3,
    "cache_enabled": true,
    "cache_ttl_seconds": 7200,
    "endpoints": {
      "app_details": "https://store.steampowered.com/api/appdetails/",
      "user_owned_games": "https://api.steampowered.com/IPlayerService/GetOwnedGames/v0001/",
      "app_list": "https://api.steampowered.com/ISteamApps/GetAppList/v2/"
    }
  },
  "charts": {
    "enabled": true,
    "update_interval_hours": 6,
    "price_interval_hours": 4,
    "cleanup_interval_hours": 24,
    "chart_types": [
      "most_played",
      "top_releases",
      "best_sellers",
      "weekly_top_sellers"
    ],
    "chart_counts": {
      "most_played": 100,
      "top_releases": 50,
      "best_sellers": 100,
      "weekly_top_sellers": 75
    },
    "steam_charts_endpoints": {
      "most_played": "https://steamcharts.com/top",
      "top_releases": "https://store.steampowered.com/charts/topselling/",
      "best_sellers": "https://store.steampowered.com/charts/bestsellers/",
      "weekly_top_sellers": "https://store.steampowered.com/charts/weeklytopsellers/"
    },
    "cache_enabled": true,
    "cache_ttl_hours": 2,
    "parallel_processing": true,
    "max_concurrent_charts": 3
  },
  "scheduler": {
    "enabled": true,
    "enhanced_scheduler": true,
    "parent_process_monitoring": true,
    "sign_of_life_interval": 30,
    "heartbeat_interval": 60,
    "process_management_terminal": true,
    "auto_cleanup": true,
    "separate_terminals": true,
    "scheduler_types": {
      "price_updates": {
        "enabled": true,
        "interval_hours": 6,
        "task_function": "enhanced_price_tracking_task"
      },
      "name_updates": {
        "enabled": true,
        "interval_minutes": 30,
        "task_function": "enhanced_name_update_task"
      },
      "charts_updates": {
        "enabled": false,
        "interval_hours": 6,
        "task_function": "enhanced_charts_update_task"
      },
      "charts_prices": {
        "enabled": false,
        "interval_hours": 4,
        "task_function": "enhanced_charts_price_task"
      },
      "charts_cleanup": {
        "enabled": false,
        "interval_hours": 24,
        "task_function": "enhanced_charts_cleanup_task"
      }
    }
  },
  "export": {
    "format": "csv",
    "directory": "exports",
    "csv": {
      "delimiter": ",",
      "quote_char": "\"",
      "escape_char": "\\",
      "encoding": "utf-8",
      "include_header": true,
      "date_format": "%Y-%m-%d %H:%M:%S"
    },
    "json": {
      "indent": 2,
      "ensure_ascii": false,
      "sort_keys": true
    },
    "xlsx": {
      "engine": "xlsxwriter",
      "sheet_name": "Steam Price Data",
      "freeze_panes": [
        1,
        0
      ]
    },
    "auto_export": {
      "enabled": false,
      "interval_hours": 24,
      "formats": [
        "csv"
      ],
      "retention_days": 30
    }
  },
  "elasticsearch": {
    "enabled": false,
    "host": "localhost",
    "port": 9200,
    "username": "",
    "password": "",
    "use_ssl": false,
    "verify_certs": false,
    "timeout": 30,
    "max_retries": 3,
    "index_prefix": "steam-tracker",
    "bulk_size": 1000,
    "refresh_interval": "30s",
    "number_of_shards": 1,
    "number_of_replicas": 0,
    "indices": {
      "price_snapshots": {
        "name": "steam-price-snapshots",
