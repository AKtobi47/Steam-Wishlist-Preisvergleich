      "tracked_apps": {
        "name": "steam-tracked-apps",
        "mapping_file": "elasticsearch/mappings/tracked_apps.json"
      },
      "charts_tracking": {
        "name": "steam-charts-tracking",
        "mapping_file": "elasticsearch/mappings/charts_tracking.json"
      },
      "charts_prices": {
        "name": "steam-charts-prices",
        "mapping_file": "elasticsearch/mappings/charts_prices.json"
      },
      "name_history": {
        "name": "steam-name-history",
        "mapping_file": "elasticsearch/mappings/name_history.json"
      }
    }
  },
